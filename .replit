modules = ["nodejs-20", "web", "python-3.12"]
run = 'python .\manage.py runserver'

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", 'python .\manage.py runserver']

[workflows]
runButton = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = 46593778
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"

[[ports]]
localPort = 5000
externalPort = 80
